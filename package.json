{
  "private": true,
  "name": "ant-design-docs",
  "scripts": {
    "start": "dumi dev",
    "start:weapp": "yarn workspace antd-taro-demo dev:weapp",
    "start:h5": "yarn workspace antd-taro-demo dev:h5",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "build": "gulp build",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build",
    "prepare": "husky install",
    "clean": "rimraf node_modules && rimraf packages/antd-taro && yarn workspaces run clean"
  },
  "workspaces": [
    "packages/*"
  ],
  "module": "es/index.js",
  "typings": "es/index.d.ts",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^13.0.0",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "del": "^6.0.0",
    "dumi": "^1.1.40",
    "dumi-theme-mobile": "^1.1.22",
    "eslint": "^8.12.0",
    "eslint-config-alloy": "^4.5.1",
    "eslint-config-taro": "^3.4.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "gh-pages": "^3.2.3",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-less": "^5.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.7",
    "postcss-less": "^6.0.0",
    "prettier": "^2.6.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-packagejson": "^2.2.17",
    "rimraf": "^3.0.2",
    "stylelint": "^14.6.1",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^25.0.0",
    "through2": "^4.0.2",
    "typescript": "^4.6.3"
  }
}
