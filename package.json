{
  "private": true,
  "license": "MIT",
  "workspaces": [
    "example",
    "src"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "clean": "rimraf dist-docs yarn.lock node_modules && yarn workspaces run clean",
    "dev:h5": "yarn workspace antd-taro-demo dev:h5",
    "dev:site": "vite",
    "dev:weapp": "yarn workspace antd-taro-demo dev:weapp",
    "eslint": "eslint site/ --ext .ts,.tsx --fix",
    "prepare": "husky install",
    "preview": "vite preview",
    "stylelint": "stylelint 'site/**/*.less' 'src/**/*.css' --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run eslint",
      "git add"
    ],
    "*.{css, less}": [
      "npm run stylelint",
      "git add"
    ]
  },
  "dependencies": {
    "@ant-design/pro-components": "^1.1.5",
    "@ant-design/pro-layout": "next",
    "antd": "^4.20.7",
    "classnames": "^2.3.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-markdown": "^8.0.3",
    "react-router-dom": "^6.3.0",
    "react-syntax-highlighter": "^15.5.0",
    "remark-gfm": "^3.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/react": "^18.0.10",
    "@types/react-dom": "^18.0.5",
    "@types/react-syntax-highlighter": "^15.5.1",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vitejs/plugin-react": "^1.3.2",
    "eslint": "^8.16.0",
    "eslint-config-alloy": "^4.5.1",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.1",
    "less": "^4.1.2",
    "lint-staged": "^13.0.0",
    "postcss": "^8.4.14",
    "postcss-less": "^6.0.0",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-packagejson": "^2.2.18",
    "rimraf": "^3.0.2",
    "stylelint": "^14.8.5",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-standard": "^25.0.0",
    "typescript": "^4.7.2",
    "vite": "^2.9.9"
  }
}
