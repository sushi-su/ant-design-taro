{
  "name": "root",
  "private": true,
  "files": [
    "./packages/antd-taro"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "gulp build",
    "clean": "rimraf node_modules && rimraf packages/antd-taro && yarn workspaces run clean",
    "prepare": "husky install",
    "publish": "npm publish ./packages/antd-taro --registry=https://registry.npmjs.org",
    "publish-alpha": "npm publish ./packages/antd-taro --registry=https://registry.npmjs.org --tag alpha"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{css,less}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "del": "^6.0.0",
    "eslint": "^8.12.0",
    "eslint-config-alloy": "^4.5.1",
    "eslint-config-taro": "^3.4.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-less": "^5.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.7",
    "postcss-less": "^6.0.0",
    "prettier": "^2.6.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-packagejson": "^2.2.17",
    "stylelint": "^14.6.1",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^25.0.0",
    "through2": "^4.0.2",
    "typescript": "^4.6.3"
  }
}
