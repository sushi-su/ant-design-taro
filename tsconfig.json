{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "antd-taro": ["src/index.ts"],
      "lib-utils/*": ["src/utils/*"],
      "lib-components/*": ["src/components/*"],
      "demo-components": ["taro/components/index.ts"]
    }
  },
  "include": ["taro", "src", "docs", ".dumi", "global.d.ts"],
  "compileOnSave": false,
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "resolveJsonModule": true,
      "noImplicitAny": false
    }
  }
}
