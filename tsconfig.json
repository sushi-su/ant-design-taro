{
  "compilerOptions": {
    "rootDirs": ["."],
    "target": "ES6",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "declaration": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2015", "DOM"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": ["packages"],
  "exclude": ["node_modules", "lib"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "resolveJsonModule": true,
      "noImplicitAny": false
    }
  }
}
